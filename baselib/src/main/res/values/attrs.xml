<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleBar">
        <attr name="titleBarTitle" format="string" />
        <attr name="titleBarLeftImage" format="reference" />
        <attr name="titleBarRightImage" format="reference" />
        <attr name="titleBarBackground" format="reference|color" />
    </declare-styleable>
    <declare-styleable name="PwdEditText">
        <attr name="space" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="checkedColor" format="color"/>
        <attr name="defaultColor" format="color"/>
        <attr name="textLength" format="integer"/>
        <attr name="backColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="circle" format="dimension"/>
        <attr name="round" format="dimension"/>
        <attr name="textSize" format="dimension"/>
        <attr name="isPwd" format="boolean"/>
        <attr name="waitInputColor" format="color"/>
        <attr name="isWaitInput" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RxScaleImageView">
        <attr name="src" format="reference"/>
        <attr name="assetName" format="string"/>
        <attr name="panEnabled" format="boolean"/>
        <attr name="zoomEnabled" format="boolean"/>
        <attr name="quickScaleEnabled" format="boolean"/>
        <attr name="tileBackgroundColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="RoundLabelTextView">

        <attr name="backGroundColor" format="color" />
        <attr name="labelLength" format="dimension" />
        <attr name="textFlip" format="boolean" />
        <attr name="radius" format="dimension" />

        <attr name="contentTextSize" format="dimension" />
        <attr name="contentMarginStart" format="dimension" />
        <attr name="contentMarginBottom" format="dimension" />
        <attr name="contentTextColor" format="color" />
        <attr name="contentText" format="string" />

        <attr name="contentTextStyle">
            <enum name="normal" value="0" />
            <enum name="italic" value="1" />
            <enum name="bold" value="2" />
        </attr>

        <attr name="topTextSize" format="dimension" />
        <attr name="topTextColor" format="color" />
        <attr name="topMarginStart" format="dimension" />
        <attr name="topMarginBottom" format="dimension" />
        <attr name="topText" format="string" />

        <attr name="topTextStyle">
            <enum name="normal" value="0" />
            <enum name="italic" value="1" />
            <enum name="bold" value="2" />
        </attr>
        <attr name="angle">
            <flag name="all" value="15" />
            <flag name="topRight" value="1" />
            <flag name="topLeft" value="2" />
            <flag name="bottomLeft" value="3" />
            <flag name="bottomRight" value="4" />
        </attr>

    </declare-styleable>
</resources>
