<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_top">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp52"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/send_dialog_title2"
        android:textColor="@color/txt_333333"
        android:textSize="@dimen/dp16" />

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp52"
        android:layout_alignParentRight="true"
        android:background="@drawable/common_tab_bg">

        <TextView
            android:id="@+id/left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/close_icon" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp42"
        android:layout_below="@+id/right_layout"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginVertical="@dimen/dp16"
        android:background="@null"
        android:hint="@string/send_dialog_pwd_hint"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingHorizontal="@dimen/dp8"
        android:textSize="@dimen/dp14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/et_pwd"
        android:layout_marginHorizontal="@dimen/dp16"
        android:background="@color/line_dddddd" />

    <TextView
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pwd"
        android:layout_marginHorizontal="@dimen/dp32"
        android:layout_marginTop="@dimen/dp32"
        android:layout_marginBottom="@dimen/dp48"
        android:background="@drawable/btn_5f8def_selector"
        android:elevation="@dimen/dp2"
        android:gravity="center"
        android:paddingVertical="@dimen/dp12"
        android:text="@string/send_dialog_btn2"
        android:textColor="@color/white" />
</RelativeLayout>