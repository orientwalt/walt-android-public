<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp52"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/send_dialog_title"
        android:textColor="@color/txt_333333"
        android:textSize="@dimen/dp16" />

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp52"
        android:layout_alignParentRight="true"
        android:background="@drawable/common_tab_bg">

        <TextView
            android:id="@+id/left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/close_icon" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/right_layout"
        android:layout_marginHorizontal="@dimen/dp16"
        android:background="@color/line_dddddd" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/right_layout"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginTop="@dimen/dp8"
        android:text="@string/send_dialog_item1" />

    <TextView
        android:id="@+id/tv_m1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv1"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_toRightOf="@+id/tv1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_m2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv2"
        android:ellipsize="middle"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="@dimen/dp16"
        android:gravity="right"
        android:layout_toRightOf="@+id/tv1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_m3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv3"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_toRightOf="@+id/tv1"
        android:ellipsize="middle"
        android:gravity="right"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_m4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv4"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_toRightOf="@+id/tv1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_alignRight="@+id/tv1"
        android:layout_marginVertical="@dimen/dp8"
        android:text="@string/send_dialog_item2" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_alignRight="@+id/tv1"
        android:text="@string/send_dialog_item3" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv3"
        android:layout_alignRight="@+id/tv1"
        android:layout_marginVertical="@dimen/dp8"
        android:text="@string/send_dialog_item4" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/tv4"
        android:layout_marginHorizontal="@dimen/dp16"
        android:background="@color/line_dddddd" />

    <TextView
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv4"
        android:layout_marginHorizontal="@dimen/dp32"
        android:gravity="center"
        android:paddingVertical="@dimen/dp12"
        android:layout_marginTop="@dimen/dp32"
        android:elevation="@dimen/dp2"
        android:layout_marginBottom="@dimen/dp48"
        android:background="@drawable/btn_5f8def_selector"
        android:text="@string/send_dialog_btn"
        android:textColor="@color/white" />
</RelativeLayout>