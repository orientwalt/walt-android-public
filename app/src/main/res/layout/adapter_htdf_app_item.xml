<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginRight="@dimen/dp16"
        android:layout_toLeftOf="@+id/tv_state"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@color/txt_333333"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tv_exchang_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_address"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_toLeftOf="@+id/tv_state2"
        android:textColor="@color/txt_333333"
        android:textSize="@dimen/sp13" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_address"
        android:layout_alignParentRight="true"
        android:drawableRight="@mipmap/go_icon"
        android:drawablePadding="@dimen/dp8"
        android:textColor="@color/txt_8f95a9"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tv_state2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_exchang_time"
        android:layout_alignParentRight="true"
        android:drawablePadding="@dimen/dp8"
        android:paddingHorizontal="@dimen/dp24"
        android:textColor="@color/title_bg_5f8def"
        android:textSize="@dimen/sp14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/line_dddddd" />
</RelativeLayout>