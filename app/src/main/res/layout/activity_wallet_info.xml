<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5fb"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.weiyu.baselib.widget.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:titleBarBackground="@color/transparent"
        app:titleBarLeftImage="@mipmap/back_icon"
        app:titleBarTitle="@string/walletinfo_title" />

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/elevation_1"
        android:onClick="item">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16"
            android:src="@mipmap/walt_info_icon" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_head"
            android:textColor="@color/txt_333333"
            android:textSize="@dimen/sp15" />

        <ImageView
            android:id="@+id/tv_go0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp16"
            android:src="@mipmap/go_icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        android:background="@color/white"
        android:elevation="@dimen/elevation_1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_key"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp52"
            android:layout_below="@+id/cl_tab"
            android:background="@drawable/common_tab_bg"
            android:onClick="item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_setting">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:drawablePadding="@dimen/dp12"
                android:text="@string/walletinfo_item3"
                android:textColor="@color/txt_333333"
                android:textSize="@dimen/sp15" />


            <ImageView
                android:id="@+id/tv_go3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp16"
                android:src="@mipmap/go_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/dp16"
                android:background="@color/line_dddddd" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_keystore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp52"
            android:layout_below="@+id/cl_tab"
            android:background="@drawable/common_tab_bg"
            android:onClick="item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_setting">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:drawablePadding="@dimen/dp12"
                android:text="@string/walletinfo_item4"
                android:textColor="@color/txt_333333"
                android:textSize="@dimen/sp15" />


            <ImageView
                android:id="@+id/tv_go4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp16"
                android:src="@mipmap/go_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_words"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp52"
            android:background="@drawable/common_tab_bg"
            android:onClick="item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_setting">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginHorizontal="@dimen/dp16"
                android:background="@color/line_dddddd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:drawablePadding="@dimen/dp12"
                android:text="@string/walletinfo_item5"
                android:textColor="@color/txt_333333"
                android:textSize="@dimen/sp15" />


            <ImageView
                android:id="@+id/tv_go5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp16"
                android:src="@mipmap/go_icon" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginTop="@dimen/dp32"
        android:background="@drawable/btn_5f8def_selector"
        android:elevation="@dimen/elevation_1"
        android:gravity="center"
        android:paddingVertical="@dimen/dp12"
        android:text="@string/walletinfo_btn"
        android:textColor="@color/white" />
</LinearLayout>