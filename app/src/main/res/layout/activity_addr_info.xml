<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.weiyu.baselib.widget.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp2"
        app:titleBarBackground="@color/white"
        app:titleBarLeftImage="@mipmap/back_icon"
        app:titleBarTitle="@string/add_addr_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/white"
        android:elevation="@dimen/elevation_1" />

    <TextView
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp52"
        android:layout_marginVertical="@dimen/dp8"
        android:background="@color/white"
        android:textColor="@color/txt_333333"
        android:elevation="@dimen/elevation_1"
        android:gravity="center_vertical"
        android:hint="@string/add_addr_name"
        android:maxLength="20"
        android:paddingHorizontal="@dimen/dp16"
        android:singleLine="true"
        android:textSize="@dimen/sp15" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp8"
        android:textSize="@dimen/sp14"
        android:textColor="@color/txt_8f95a9"
        android:layout_marginLeft="@dimen/dp16"
        android:text="@string/add_addr_address" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/elevation_1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp12"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_coin"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp4"
                android:textColor="@color/txt_333333" />

            <TextView
                android:id="@+id/tv_type"
                android:textColor="@color/txt_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp15" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/dp8"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginRight="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp4"
                android:textColor="@color/txt_8f95a9"
                android:layout_toLeftOf="@+id/rl_copy"
                android:background="@null"
                android:ellipsize="middle"
                android:maxLength="100"
                android:singleLine="true"
                android:textSize="@dimen/sp14" />

            <RelativeLayout
                android:id="@+id/rl_copy"
                android:layout_width="@dimen/dp28"
                android:layout_height="@dimen/dp28"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp16"
                android:background="@drawable/common_tab_bg">

                <TextView
                    android:id="@+id/tv_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/copy_index_icon" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginHorizontal="@dimen/dp16"
            android:background="@color/line_dddddd" />

        <TextView
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="@string/add_addr_remarck"
            android:maxLength="100"
            android:minHeight="@dimen/dp52"
            android:paddingHorizontal="@dimen/dp16"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/sp24"
        android:layout_marginTop="@dimen/dp32"
        android:background="@drawable/btn_red_selector"
        android:elevation="@dimen/elevation_1"
        android:gravity="center"
        android:paddingVertical="@dimen/dp12"
        android:text="@string/delete"
        android:textColor="@color/white" />

</LinearLayout>