                    android:textColor="@color/txt_8f95a9"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tv_time4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_p3"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp18"
                    android:layout_toRightOf="@+id/tv_state4"
                    android:text="- -"
                    android:textColor="@color/txt_8f95a9"
                    android:textSize="@dimen/dp13" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_app_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp24"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_time5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_p3"
                    android:layout_marginLeft="@dimen/dp24"
                    android:layout_marginTop="@dimen/dp18"
                    android:layout_toRightOf="@+id/tv_state4"
                    android:text="@string/commission_node_hint59"
                    android:textColor="@color/txt_8f95a9"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tv_time6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp24"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp24"
                    android:layout_toRightOf="@+id/tv_state4"
                    android:text="- -"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/dp15" />
                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginHorizontal="@dimen/dp24"
                    android:background="@color/line_dddddd" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp24"
                android:visibility="gone">

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp24"
                    android:background="@color/line_dddddd" />

                <TextView
                    android:id="@+id/txt_info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:layout_marginTop="@dimen/dp24"
                    android:maxWidth="@dimen/dp100"
                    android:singleLine="true"
                    android:text="@string/my_plan_info_item3"
                    android:textColor="@color/txt_8f95a9"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tx_info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp24"
                    android:layout_toRightOf="@+id/txt_info1"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/txt_info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_info1"
                    android:layout_marginTop="@dimen/dp16"
                    android:maxWidth="@dimen/dp100"
                    android:singleLine="true"
                    android:text="@string/my_plan_info_item4"
                    android:textColor="@color/txt_8f95a9"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tx_info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_info1"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_toRightOf="@+id/txt_info1"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/txt_info3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_info2"
                    android:layout_marginTop="@dimen/dp16"
                    android:maxWidth="@dimen/dp100"
                    android:singleLine="true"
                    android:text="@string/commission_node_hint59"
                    android:textColor="@color/txt_8f95a9"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tx_info3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_info2"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_toRightOf="@+id/txt_info1"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="- -"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/txt_info4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_info3"
                    android:layout_marginTop="@dimen/dp16"
                    android:maxWidth="@dimen/dp100"
                    android:singleLine="true"
                    android:text="@string/success_item3"
                    android:textColor="@color/txt_8f95a9"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tx_info4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_info3"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_toRightOf="@+id/txt_info1"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/txt_info5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_info4"
                    android:layout_marginTop="@dimen/dp16"
                    android:maxWidth="@dimen/dp100"
                    android:singleLine="true"
                    android:text="@string/success_item4"
                    android:textColor="@color/txt_8f95a9"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tx_info5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_info4"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_toRightOf="@+id/txt_info1"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/txt_info6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_info5"
                    android:layout_marginTop="@dimen/dp16"
                    android:maxWidth="@dimen/dp100"
                    android:singleLine="true"
                    android:text="@string/send_fee_txt"
                    android:textColor="@color/txt_8f95a9"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tx_info6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_info5"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_toRightOf="@+id/txt_info1"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/dp13" />

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_below="@+id/tx_info6"
                    android:layout_marginVertical="@dimen/dp24"
                    android:background="@color/line_dddddd" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_state_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp24"
                android:text="@string/commission_node_hint31"
                android:textColor="@color/title_bg_5f8def"
                android:textSize="@dimen/dp13" />

            <TextView
                android:id="@+id/tv_msg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp24"
