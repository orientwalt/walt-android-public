<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp52"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/send_input_pwd"
        android:textColor="@color/txt_333333"
        android:textSize="@dimen/dp16" />

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp52"
        android:layout_alignParentRight="true"
        android:background="@drawable/common_tab_bg">

        <TextView
            android:id="@+id/left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/close_icon" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/right_layout"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginVertical="@dimen/dp16"
        android:background="@drawable/btn_f5f5f5_shape"
        android:hint="@string/send_dialog_pwd_hint"
        android:inputType="textPassword"
        android:maxLength="16"
        android:padding="@dimen/dp8"
        android:textSize="@dimen/dp14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/et_pwd"
        android:background="@color/line_dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pwd"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:elevation="@dimen/dp2"
            android:gravity="center"
            android:paddingVertical="@dimen/dp12"
            android:text="@string/coin_dialog_close"
            android:textColor="@color/txt_333333" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:layout_below="@+id/et_pwd"
            android:background="@color/line_dddddd" />

        <TextView
            android:id="@+id/btn_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:elevation="@dimen/dp2"
            android:gravity="center"
            android:paddingVertical="@dimen/dp12"
            android:text="@string/send_dialog_btn2"
            android:textColor="@android:color/holo_red_light" />
    </LinearLayout>

</RelativeLayout>