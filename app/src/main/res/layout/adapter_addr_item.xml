<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginBottom="@dimen/dp4"
        android:background="@drawable/layout_n_selector"
        android:elevation="@dimen/elevation_1"
        android:paddingHorizontal="@dimen/dp12"
        android:paddingVertical="@dimen/dp12">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dp26"
            android:layout_height="@dimen/dp26"
            android:layout_marginRight="@dimen/dp4"
            android:scaleType="centerInside"
            android:src="@mipmap/touxiang" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_head"
            android:layout_alignBottom="@+id/iv_head"
            android:layout_toRightOf="@+id/iv_head"
            android:gravity="center"
            android:textColor="@color/txt_333333"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:layout_toLeftOf="@+id/rl_copy"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_head"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:layout_toLeftOf="@+id/rl_copy"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textSize="@dimen/sp12"
            android:textColor="@color/txt_8f95a9" />

        <RelativeLayout
            android:id="@+id/rl_copy"
            android:layout_width="@dimen/dp26"
            android:layout_height="@dimen/dp26"
            android:layout_alignBottom="@+id/tv_address"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_tab_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/copy_icon" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>