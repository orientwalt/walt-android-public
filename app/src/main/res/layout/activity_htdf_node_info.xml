<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5fb"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.weiyu.baselib.widget.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleBarBackground="@color/white"
        app:titleBarLeftImage="@mipmap/back_icon"
        app:titleBarTitle="@string/commission_node_hint15" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp16"
                android:layout_marginTop="@dimen/dp16"
                android:background="@drawable/gradient_blue3"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_marginTop="16dp"
                        android:text="@string/commission_node_hint1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp15" />

                    <com.weiyu.baselib.widget.ThumbnailView
                        android:id="@+id/tv_go"
                        android:layout_width="@dimen/dp36"
                        android:layout_marginTop="@dimen/dp4"
                        android:layout_height="@dimen/dp36"
                        android:layout_alignParentRight="true"
                        android:scaleType="center"
                        android:src="@mipmap/go_in_white" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="@string/commission_node_hint3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp12" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/ttt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/dp4"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text="@string/commission_node_hint2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp12" />

                        <com.weiyu.baselib.widget.ThumbnailView
                            android:id="@+id/tv_tan"
                            android:layout_width="@dimen/dp32"
                            android:layout_height="@dimen/dp32"
                            android:layout_toRightOf="@+id/ttt"
                            android:scaleType="centerInside"
                            android:src="@mipmap/tanhao"
                            android:visibility="gone" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_my_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingRight="@dimen/dp16"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp18" />

                    <TextView
                        android:id="@+id/tv_my_price2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp18" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp0.5"
                    android:layout_marginVertical="@dimen/dp16"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginBottom="@dimen/dp16"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_reward"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/node_my_icon1"
                        android:drawablePadding="@dimen/dp4"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/commission_node_hint4"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp13" />

                    <TextView
                        android:id="@+id/tv_jiechu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/htdf_incom_icon"
                        android:drawablePadding="@dimen/dp4"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/commission_node_hint37"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp13" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp16"
                android:background="@drawable/layout_shape"
                android:orientation="vertical"
                android:padding="@dimen/dp16">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="@dimen/dp32"
                        android:layout_height="@dimen/dp32"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp8"
                        android:scaleType="fitXY"
                        android:src="@mipmap/node_icon1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_icon"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/commission_node_hint6"
                            android:textColor="@color/txt_333333"
                            android:textSize="@dimen/dp17" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp4"
                            android:ellipsize="middle"
                            android:singleLine="true"
                            android:text="htdf1EGWEW......UGT34UIHTU"
                            android:textColor="@color/txt_8f95a9"
                            android:textSize="@dimen/dp12" />
                    </LinearLayout>

                </RelativeLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp8">

                    <TextView
                        android:id="@+id/tx1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/commission_node_hint8"
                        android:textColor="@color/txt_8f95a9"
                        android:textSize="@dimen/dp12"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/tx2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tx2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:singleLine="true"
                        android:text="@string/commission_node_hint10"
                        android:textColor="@color/txt_8f95a9"
                        android:textSize="@dimen/dp12"
                        app:layout_constraintLeft_toRightOf="@+id/tx1"
                        app:layout_constraintRight_toLeftOf="@+id/tx3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tx3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/commission_node_hint9"
                        android:textColor="@color/txt_8f95a9"
                        android:textSize="@dimen/dp12"
                        app:layout_constraintLeft_toRightOf="@+id/tx2"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tx4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp8"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="5000"
                        android:textColor="@color/txt_333333"
                        android:textSize="@dimen/dp17"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/tx2"
                        app:layout_constraintTop_toBottomOf="@+id/tx1" />

                    <TextView
                        android:id="@+id/tx5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp8"
                        android:singleLine="true"
                        android:text="4"
                        android:textColor="@color/txt_333333"
                        android:textSize="@dimen/dp17"
                        app:layout_constraintLeft_toRightOf="@+id/tx1"
                        app:layout_constraintRight_toLeftOf="@+id/tx3"
                        app:layout_constraintTop_toBottomOf="@+id/tx1" />

                    <TextView
                        android:id="@+id/tx6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp8"
                        android:gravity="center"
                        android:text="8.3%"
                        android:textColor="@color/txt_333333"
                        android:textSize="@dimen/dp17"
                        app:layout_constraintLeft_toRightOf="@+id/tx2"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tx1" />
                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:gravity="center"
                    android:text="@string/commission_node_hint11"
                    android:textColor="@color/txt_8f95a9"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tv_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:gravity="left"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean euismod bibendum laoreet. Proin gravida dolor"
                    android:textColor="@color/txt_8f95a9"
                    android:textSize="@dimen/dp12" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_weituo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_emslogin"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/dp24"
                android:layout_marginTop="@dimen/dp32"
                android:layout_marginBottom="@dimen/dp56"
                android:background="@drawable/btn_5f8def_selector"
                android:gravity="center"
                android:paddingVertical="@dimen/dp12"
                android:text="@string/commission_node_hint16"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>