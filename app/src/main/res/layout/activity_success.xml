<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <com.weiyu.baselib.widget.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleBarBackground="@color/white"
        app:titleBarLeftImage="@mipmap/back_icon" />


    <TextView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_title"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginTop="@dimen/dp12"
        android:layout_marginBottom="@dimen/dp8"
        android:drawableTop="@mipmap/success_icon"
        android:gravity="center"
        android:textColor="@color/txt_333333"
        android:textSize="@dimen/dp24" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/dp8"
        android:textColor="@color/title_bg_5f8def"
        android:textSize="@dimen/dp18" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/tv_price"
        android:layout_marginHorizontal="@dimen/dp16"
        android:background="@color/line_dddddd" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_to_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginVertical="@dimen/dp8"
                    android:text="@string/success_item1" />

                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_to_txt"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:drawableRight="@mipmap/copy_icon"
                    android:drawablePadding="@dimen/dp19"
                    android:ellipsize="middle"
                    android:paddingVertical="@dimen/dp8"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/tv_from_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_from"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginVertical="@dimen/dp8"
                    android:text="@string/success_item2" />

                <TextView
                    android:id="@+id/tv_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_from_txt"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp8"
                    android:drawableRight="@mipmap/copy_icon"
                    android:drawablePadding="@dimen/dp19"
                    android:ellipsize="middle"
                    android:paddingVertical="@dimen/dp8"
                    android:singleLine="true" />


                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_to"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginVertical="@dimen/dp8"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_remark_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_fee"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginVertical="@dimen/dp8"
                    android:text="@string/success_item6" />

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_remark_txt"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp8" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_below="@+id/tv_remark"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:background="@color/line_dddddd" />

                <TextView
                    android:id="@+id/tv_change_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_remark"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginVertical="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp8"
                    android:text="@string/success_item3" />

                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:layout_below="@+id/tv_change"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginRight="@dimen/dp16"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_change_txt"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp8"
                    android:layout_toLeftOf="@+id/btn_copy"
                    android:drawableRight="@mipmap/copy_icon"
                    android:drawablePadding="@dimen/dp19"
                    android:paddingVertical="@dimen/dp8" />

                <TextView
                    android:id="@+id/tv_qu_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_change"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginVertical="@dimen/dp8"
                    android:text="@string/success_item4"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_qu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_qu_txt"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp8"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_qu"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginVertical="@dimen/dp8"
                    android:text="@string/success_item" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time_txt"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp8" />

                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_copy"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginBottom="@dimen/dp16"
                    android:padding="@dimen/dp12"
                    android:text="@string/back_licai"
                    android:textColor="@color/title_bg_5f8def"
                    android:textSize="@dimen/sp15"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_go_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_copy"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp12"
                android:padding="@dimen/dp12"
                android:text="@string/str_go_block"
                android:textColor="@color/title_bg_5f8def"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>