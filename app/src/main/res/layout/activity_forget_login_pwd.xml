<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5fb"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.weiyu.baselib.widget.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation_1"
        app:titleBarBackground="@color/white"
        app:titleBarLeftImage="@mipmap/back_icon"
        app:titleBarTitle="@string/login_forget_set_pwd" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/white"
        android:elevation="@dimen/elevation_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginHorizontal="@dimen/dp16"
        android:background="@color/line_dddddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_center">

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp42"
            android:layout_marginHorizontal="@dimen/dp16"
            android:layout_marginVertical="@dimen/dp8"
            android:background="@null"
            android:hint="@string/updatepwd_new_pwd_hint"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="@dimen/dp14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginHorizontal="@dimen/dp16"
        android:background="@color/line_dddddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_center">

        <EditText
            android:id="@+id/et_new_pwd2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp42"
            android:layout_marginHorizontal="@dimen/dp16"
            android:layout_marginVertical="@dimen/dp8"
            android:background="@null"
            android:hint="@string/updatepwd_new_pwd_hint2"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="@dimen/dp14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginHorizontal="@dimen/dp16"
        android:background="@color/line_dddddd" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp32"
        android:layout_marginTop="@dimen/dp56"
        android:background="@drawable/btn_5f8def_selector"
        android:elevation="@dimen/elevation_1"
        android:gravity="center"
        android:onClick="btn"
        android:paddingVertical="@dimen/dp12"
        android:text="@string/str_sure"
        android:textColor="@color/white" />
</LinearLayout>